<% show_name ||= false %>



 <% if tickets.empty? %>
<p>There are no tickets matching the selected criteria.</p>

 <% else %>
    <table>
        <thead>
           <tr>
             <% if show_name %>
                <th>Name</th>
                <th>Assignee</th>
             <% else %>
                <th>Creator</th>
             <% end %>
                 <th>Status</th>
                 <th>Tags</th>
                 <% if logged_in? %>
                    <th></th>
                <% end %>
           </tr>
        </thead>
        <tbody>
            <% tickets.each do |ticket| %>
                <%= render 'tickets/ticket', ticket: ticket, show_name: show_name %>
            <% end %>
        </tbody>
    </table>
 <% end %>