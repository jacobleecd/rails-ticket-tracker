<%= render 'shared/title', title: 'Log in' %>

<%= form_tag login_path do %>
  <dl>
    <dt><%= label_tag :name %></dt>
    <dd><%= text_field_tag :name %></dd>
    <dt><%= label_tag :password %></dt>
    <dd><%= password_field_tag :password %></dd>
  </dl>
  <%= submit_tag 'Login', class: 'btn' %>
<% end %>